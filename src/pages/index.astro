---
import { withBase } from '../lib/paths';
const plUrl = withBase('/pl/');
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta http-equiv="refresh" content={`0; url=${plUrl}`} />
    <meta property="og:title" content="Greggular VST" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content="Greggular VST" />
    <title>Greggular VST</title>
  </head>
  <body>
    <p>Redirecting to <a href={plUrl}>Polish site</a>...</p>
  </body>
</html>
