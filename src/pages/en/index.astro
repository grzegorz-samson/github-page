---
import PageLayout from '../../layouts/PageLayout.astro';
import HeroCta from '../../components/HeroCta.astro';
import FeatureGrid from '../../components/FeatureGrid.astro';
import { withBase } from '../../lib/paths';

const pluginPanelsHref = `${withBase('/en/plugin/')}#panels`;
---

<PageLayout
  lang="en"
  title="Greggular VST"
  description="Greggular VST: VST plugin, research, and educational activities delivered within the scholarship project."
>
  <HeroCta
    kicker="Scholarship project"
    title="New technologies in developing tools and technological competences for contemporary music."
    subtitle="Generative granular synthesizer VST."
    imageSrc={withBase('/assets/plugin/controls-panel.png')}
    imageAlt="VST plugin visualization"
    imageHref={pluginPanelsHref}
    badges={['Open access', 'VST3', 'AI-assisted', '09.2025 - 02.2026']}
    primaryCta={{ label: 'VST Plugin', href: withBase('/en/plugin/') }}
    secondaryCtas={[
      { label: 'View project', href: withBase('/en/project/') },
      { label: 'Research (ADC 2025)', href: withBase('/en/research/') }
    ]}
  />

  <section>
    <p class="section-kicker">Project at a glance</p>
    <FeatureGrid
      items={[
        {
          title: 'About the project',
          text: 'Full overview of the goals, outcomes, research materials, and scholarship timeline.',
          href: withBase('/en/project/')
        },
        {
          title: 'VST plugin',
          text: 'An original tool for generative design of sound structures and textures.',
          href: withBase('/en/plugin/')
        },
        {
          title: 'Research and conference',
          text: 'Poster and method overview presented during Audio Developer Conference 2025.',
          href: withBase('/en/research/')
        },
        {
          title: 'Workshops',
          text: 'Educational activities and dissemination of project outcomes.',
          href: withBase('/en/workshops/')
        }
      ]}
    />
  </section>
</PageLayout>
